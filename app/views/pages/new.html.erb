<div class = "pages new">

<h2 style="text-align:center;">Create New Page</h2><br />

<%= link_to "<-- Back to Main Page", {:action => "index"} %><br /><br /><br />

<%= form_for(:page, :url => {:action => 'create'}) do |f| %>

<table summary = "create page" >

<tr>
	<th>Subject ID</th>
	<td> <%= f.text_field(:subject_id) %> </td>
</tr>

<tr>
	<th>Name</th>
	<td> <%= f.text_field(:name) %> </td>
</tr>
<tr>
	<th>Position</th>
	<td> <%= f.text_field(:position) %> </td>
</tr>

<tr>
	<th>Permalink</th>
	<td> <%= f.text_field(:permalink) %> </td>
</tr>

<tr>
	<th>Visible</th>
	<td> <%= f.text_field(:visible) %> </td>
</tr>
</table>

<div >
<%= submit_tag("create Page") %>
</div>

<% end %>

</div>