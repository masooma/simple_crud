<% if !flash[:notice].blank? %>
	<div>
	<%= flash[:notice] %>
	</div>
<%end%>

<div class = "pages index">

	<h2 style="text-align:center;">Pages Main Page</h2><br /><br />

		<table summary="Pages List" align="center" cellpadding="25px" style="font-family:chambria; text-align:center; text-decoration:none;">
			<tr style="color:#000080; border:1px solid black;">
				<th>Subject ID</th>
				<th>Page</th>
				<th>position</th>
				<th>Permalink</th>
				<th>Sections</th>
				<th>Visible</th>
				<th>Action</th>
			</tr>
			<% @page.each do |page| %>
				<tr>
				<td><%= page.subject_id %></td>
				<td><%= page.name %></td>
				<td><%= page.position %></td>
				<td><%= page.permalink %></td>
				<td><%= page.sections.size %></td>
				<td><%= page.visible ? 'Yes' : 'No' %></td>
				<td>
				<%= link_to "Show", {:action => 'show', :id => page.id }, :class => 'action show' %>
				<%= link_to "Edit", {:action => 'edit', :id => page.id }, :class => 'action edit' %>
				<%= link_to "Delete", {:action => 'delete', :id => page.id }, :class => 'action delete' %>
				 </td>
				</tr>	
			<%end%>

			<tr>
			<%= link_to "Add New Page", {:action => 'new'} , :class => 'action new'%>
			</tr>

		</table>

</div>
