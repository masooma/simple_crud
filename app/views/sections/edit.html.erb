<div class = "sections edit">

<h2 style="text-align:center;">Update Section</h2><br />

<%= link_to "<-- Back to Main Page", {:action => "index"} %><br /><br /><br />

<%= form_for(:section, :url => {:action => 'update', :id => @section.id}) do |f| %>

<table summary = "update section" >

<tr>
	<th>Page no.</th>
	<td> <%= f.text_field(:page_id) %> </td>
</tr>
<tr>
	<th>Name</th>
	<td> <%= f.text_field(:name) %> </td>
</tr>
<tr>
	<th>Position</th>
	<td> <%= f.text_field(:position) %> </td>
</tr>

<tr>
	<th>Visible</th>
	<td> <%= f.text_field(:visible) %> </td>
</tr>

<tr>
	<th>Content Type</th>
	<td> <%= f.text_field(:content_type) %> </td>
</tr>

<tr>
	<th>Content</th>
	<td> <%= f.text_field(:content) %> </td>
</tr>

</table>

<div >
<%= submit_tag("Update Section") %>
</div>

<% end %>

</div>