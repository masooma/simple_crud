<% if !flash[:notice].blank? %>
	<div>
	<%= flash[:notice] %>
	</div>
<%end%>

<div class = "sections index">

	<h2 style="text-align:center;">Sections Main Page</h2><br /><br />

		<table summary="Sections List" align="center" cellpadding="25px" style="font-family:chambria; text-align:center; text-decoration:none;">
			<tr style="color:#000080; border:1px solid black;">
				<th>Sr.</th>
				<th>Section</th>
				<th>Visible</th>
				<th>Content Type</th>
				<th>Action</th>
			</tr>
			<% @section.each do |section| %>
				<tr>
				<td><%= section.position %></td>
				<td><%= section.name %></td>
				<td><%= section.visible ? 'Yes' : 'No' %></td>
				<td><%= section.content_type %></td>
				<td>
				<%= link_to "Show", {:action => 'show', :id => section.id }, :class => 'action show' %>
				<%= link_to "Edit", {:action => 'edit', :id => section.id }, :class => 'action edit' %>
				<%= link_to "Delete", {:action => 'delete', :id => section.id }, :class => 'action delete' %>
				 </td>
				</tr>	
			<%end%>

			<tr>
			<%= link_to "Add New Section", {:action => 'new'} , :class => 'action new'%>
			</tr>

		</table>

</div>
